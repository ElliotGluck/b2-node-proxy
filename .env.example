# Backblaze B2 Configuration
B2_APPLICATION_KEY_ID=your_key_id_here
B2_APPLICATION_KEY=your_secret_key_here

# Bucket Configuration - Choose ONE of the following:

# Option 1: Single Bucket Mode
# Uncomment this to use a single bucket (all files accessed without prefix)
# B2_BUCKET_ID=your_bucket_id_here

# Option 2: Multiple Bucket Mode (RECOMMENDED)
# Uncomment this to use multiple buckets with custom path prefixes
# Access files like: /invoices/file.pdf, /reports/file.pdf
B2_BUCKET_MAP={"invoices":"bucket_id_1","reports":"bucket_id_2","documents":"bucket_id_3"}

# Feature Flags
MERGE_PDF_VERSIONS=true

# Cache Settings (in seconds)
BROWSER_CACHE_TTL=14400
CDN_CACHE_TTL=31536000

# Server Configuration
# Note: Coolify will automatically set PORT, you don't need to set it manually
PORT=3001
HOST=0.0.0.0

# Optional: For local docker-compose (not needed for Coolify)
EXTERNAL_PORT=3001
